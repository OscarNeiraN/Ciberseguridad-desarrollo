pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "oneiran/securedev:latest"
        EC2_USER = "ec2-user"
        EC2_IP = "44.211.117.60"
        EC2_KEY = "jenkins/claves-jenkins-ubuntu.pem"
        SNYK_TOKEN = credentials('snyk-token')
    }

    stages {

        /* ==========================
         * CHECKOUT
         * ========================== */
        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'github-creds',
                    url: 'https://github.com/OscarNeiraN/Ciberseguridad-desarrollo.git'
            }
        }

        /* ==========================
         * VIRTUAL ENV
         * ========================== */
        stage('Install Dependencies') {
            steps {
                sh """
                    echo "Creando entorno virtual..."
                    python3 -m venv venv

                    echo "Instalando dependencias..."
                    ./venv/bin/pip install --upgrade pip
                    ./venv/bin/pip install -r requirements.txt
                """
            }
        }

        /* ==========================
         * BANDIT
         * ========================== */
        stage('Bandit Security Scan') {
            steps {
                sh """
                    echo "Ejecutando Bandit..."
                    ./venv/bin/bandit -r . -f json -o bandit-report.json || true
                    ./venv/bin/bandit -r . -f html -o bandit-report.html || true
                """
            }
            post {
                always {
                    archiveArtifacts artifacts: 'bandit-report.*', fingerprint: true
                }
            }
        }

        /* ==========================
         * SNYK CODE
         * ========================== */
        stage('Snyk Code Scan (SAST)') {
            steps {
                sh """
                    snyk auth ${SNYK_TOKEN}
                    echo "Ejecutando Snyk Code..."
                    snyk code test --json > snyk-code.json || true
                    snyk code test --sarif > snyk-code.sarif || true
                """
            }
            post {
                always {
                    archiveArtifacts artifacts: 'snyk-code.*', fingerprint: true
                }
            }
        }

        /* ==========================
         * SNYK DEPENDENCIAS
         * ========================== */
        stage('Snyk Dependency Scan') {
            steps {
                sh """
                    echo "Analizando dependencias..."
                    snyk test --json > snyk-deps.json || true
                    snyk test --sarif > snyk-deps.sarif || true
                """
            }
            post {
                always {
                    archiveArtifacts artifacts: 'snyk-deps.*', fingerprint: true
                }
            }
        }

        /* ==========================
         * SNYK CONTENEDOR
         * ========================== */
        stage('Snyk Container Scan') {
            steps {
                sh """
                    docker build -t ${DOCKER_IMAGE} .
                    snyk container test ${DOCKER_IMAGE} --json > snyk-container.json || true
                    snyk container test ${DOCKER_IMAGE} --sarif > snyk-container.sarif || true
                """
            }
            post {
                always {
                    archiveArtifacts artifacts: 'snyk-container.*', fingerprint: true
                }
            }
        }

        /* ==========================
         * OWASP ZAP ACTIVE SCAN + AUTH (CORREGIDO)
         * ========================== */
        stage('OWASP ZAP Active Scan') {
            steps {
                sh """
                    # 0. Definir variables y path del intérprete
                    CURL_TARGET="http://127.0.0.1:5000"
                    PYTHON_EXE="./venv/bin/python3"
                    
                    echo "1. Creando usuario de prueba en la base de datos (Antes de iniciar Flask)..."
                    # Asegura que el directorio 'instance' exista
                    mkdir -p instance || true 
                    
                    # Script para crear/insertar el usuario de prueba
                    \${PYTHON_EXE} - <<'EOF_PYTHON_SCRIPT'
import sqlite3
import hashlib
import time
import os

DB_PATH = 'instance/app.db'
USER_EMAIL = 'testuser@zap.com'
# La contraseña que ZAP usará al enviar el formulario (plano)
USER_PASS_PLAN = 'TestPassword123' 
# **IMPORTANTE**: Sustituye esta lógica de hashing con la que use tu app (ej: bcrypt)
# Aquí usamos SHA256 solo como ejemplo de un hash simple.
USER_PASS_HASH = hashlib.sha256(USER_PASS_PLAN.encode('utf-8')).hexdigest()

# No sleep needed here, as Flask is not running yet.
conn = None
try:
    conn = sqlite3.connect(DB_PATH)
    c = conn.cursor()
    # Asume una tabla de 'users' con 'email' y 'password'
    c.execute(\"\"\"
        CREATE TABLE IF NOT EXISTS users (
            id INTEGER PRIMARY KEY,
            email TEXT UNIQUE NOT NULL,
            password TEXT NOT NULL
        );
    \"\"\")
    # Insertar al usuario de prueba (usando el hash)
    c.execute("INSERT OR IGNORE INTO users (email, password) VALUES (?, ?)",
              (USER_EMAIL, USER_PASS_HASH))
    conn.commit()
    print(f"Usuario {USER_EMAIL} asegurado en la DB.")
except sqlite3.OperationalError as e:
    print(f"Error al acceder a la base de datos: {e}. ¿La ruta de DB es correcta?")
finally:
    if conn:
        conn.close()
EOF_PYTHON_SCRIPT

                    echo "Iniciando aplicación Flask temporal..."
                    # Iniciar la aplicación y capturar el PID
                    nohup \${PYTHON_EXE} app.py > flask.log 2>&1 &
                    echo \$! > flask.pid
                    
                    # AÑADIR UN PEQUEÑO RETRASO FIJO antes del bucle de curl
                    echo "Dando 5 segundos a Flask para iniciar..."
                    sleep 5
                    
                    echo "Esperando que Flask inicie (Máx 40s)..."
                    READY=0
                    for i in {1..20}; do
                        if curl -s \$CURL_TARGET >/dev/null; then
                            echo "Flask está corriendo!"
                            READY=1
                            break
                        fi
                        echo "Esperando... \$i"
                        sleep 2
                    done

                    if [ "\${READY}" -eq 1 ]; then
                        
                        echo "2. Generando zap.yaml (Autenticación Formulario)..."
                        # Generamos el archivo YAML para ZAP, usando autenticación basada en formulario
                        cat > zap.yaml <<EOF_YAML
env:
  contexts:
  - name: auth-context
    urls:
      - \${CURL_TARGET}
    authentication:
      method: formBasedAuthentication
      parameters:
        loginPageUrl: \${CURL_TARGET}/login
        # Parámetros del formulario: email y password (ZAP envía la contraseña plana)
        loginPostData: "email={%email%}&password={%password%}"
      verification:
        # Busca un texto en el dashboard para confirmar login exitoso
        method: response
        loggedInRegex: 'Dashboard' 
        # Si tu app usa 'Panel de Tareas' usa: loggedInRegex: 'Panel de Tareas'
    users:
      - name: testuser
        credentials:
          email: testuser@zap.com
          password: TestPassword123
jobs:
# 1. Spider (Rastreo) Autenticado
- type: spider
  parameters:
    context: auth-context
    user: testuser
    maxDuration: 2
    maxDepth: 5
# 2. Esperar Passive Scan
- type: passiveScan-wait
  parameters:
    maxDuration: 2
# 3. Active Scan (Ataque) Autenticado
- type: activeScan
  parameters:
    context: auth-context
    user: testuser
    maxDuration: 5 # Reducido, ajusta en producción
    scanPolicy: Default Policy
# 4. Generación de Reporte
- type: report
  parameters:
    reportDir: /zap/wrk/
    reportFile: zap_report.html
    reportTitle: ZAP Authenticated Active Scan Report
    template: traditional-html
- type: report
  parameters:
    reportDir: /zap/wrk/
    reportFile: zap_report.json
    reportTitle: ZAP Authenticated Active Scan Report
    template: traditional-json
EOF_YAML

                        echo "3. Ejecutando ZAP con Automation Framework..."
                        docker run --rm --network=host \
                            -v "\$(pwd)":/zap/wrk/:rw \
                            ghcr.io/zaproxy/zaproxy:stable \
                            zap.sh -cmd -autorun /zap/wrk/zap.yaml || true
                    else
                        echo "ADVERTENCIA: Flask no respondió. Saltando ZAP."
                    fi
                """
            }
            post {
                always {
                    sh """
                        # Limpieza
                        if [ -f flask.pid ]; then
                            PID=\$(cat flask.pid)
                            echo "Deteniendo proceso Flask con PID: \$PID"
                            kill "\$PID" || true
                            rm -f flask.pid
                        fi
                    """
                    archiveArtifacts artifacts: 'zap_report.*, flask.log', fingerprint: true
                }
            }
        }

        /* ==========================
         * PUSH DOCKER
         * ========================== */
        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh """
                        echo \$DOCKER_PASS | docker login -u \$DOCKER_USER --password-stdin
                        docker push ${DOCKER_IMAGE}
                    """
                }
            }
        }

        /* ==========================
         * DEPLOY EN EC2
         * ========================== */
        stage('Deploy to EC2') {
            steps {
                sh """
                    chmod 400 ${EC2_KEY}
                    ssh -o StrictHostKeyChecking=no -i ${EC2_KEY} ${EC2_USER}@${EC2_IP} '
                        docker stop app || true
                        docker rm app || true
                        docker pull ${DOCKER_IMAGE}
                        docker run -d --restart always --name app -p 80:5000 ${DOCKER_IMAGE}
                    '
                """
            }
        }
    }

    post {
        always {
            echo "Pipeline completado. Todos los reportes fueron archivados."
        }
    }
}