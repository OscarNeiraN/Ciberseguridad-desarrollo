pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "oneiran/securedev:latest"
        EC2_USER = "ec2-user"
        EC2_IP = "3.239.5.93"
        EC2_KEY = "jenkins/claves-jenkins-ubuntu.pem"
        SNYK_TOKEN = credentials('snyk-token')
    }

    stages {

        /* ==========================
         * CHECKOUT
         * ========================== */
        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'github-creds',
                    url: 'https://github.com/OscarNeiraN/Ciberseguridad-desarrollo.git'
            }
        }

        /* ==========================
         * VIRTUAL ENV
         * ========================== */
        stage('Install Dependencies') {
            steps {
                sh """
                    echo "Creando entorno virtual..."
                    python3 -m venv venv

                    echo "Instalando dependencias..."
                    . venv/bin/activate
                    pip install --upgrade pip
                    pip install -r requirements.txt
                """
            }
        }


        /* ==========================
         * BANDIT
         * ========================== */
        stage('Bandit Security Scan') {
            steps {
                sh """
                    . venv/bin/activate
                    echo "Ejecutando Bandit..."
                    bandit -r . -f json -o bandit-report.json || true
                    bandit -r . -f html -o bandit-report.html || true
                """
            }
            post {
                always {
                    archiveArtifacts artifacts: 'bandit-report.*', fingerprint: true
                }
            }
        }



        /* ==========================
         * SNYK CODE
         * ========================== */
        stage('Snyk Code Scan (SAST)') {
            steps {
                sh """
                    snyk auth ${SNYK_TOKEN}

                    echo "Ejecutando Snyk Code..."
                    snyk code test --json > snyk-code.json || true
                    snyk code test --sarif > snyk-code.sarif || true
                """
            }
            post {
                always {
                    archiveArtifacts artifacts: 'snyk-code.*', fingerprint: true
                }
            }
        }


        /* ==========================
         * SNYK DEPENDENCIAS
         * ========================== */
        stage('Snyk Dependency Scan') {
            steps {
                sh """
                    echo "Analizando dependencias..."
                    snyk test --json > snyk-deps.json || true
                    snyk test --sarif > snyk-deps.sarif || true
                """
            }
            post {
                always {
                    archiveArtifacts artifacts: 'snyk-deps.*', fingerprint: true
                }
            }
        }



        /* ==========================
         * SNYK CONTENEDOR
         * ========================== */
        stage('Snyk Container Scan') {
            steps {
                sh """
                    docker build -t ${DOCKER_IMAGE} .

                    snyk container test ${DOCKER_IMAGE} --json > snyk-container.json || true
                    snyk container test ${DOCKER_IMAGE} --sarif > snyk-container.sarif || true
                """
            }
            post {
                always {
                    archiveArtifacts artifacts: 'snyk-container.*', fingerprint: true
                }
            }
        }



        /* ==========================
         * OWASP ZAP (CORREGIDO)
         * ========================== */
        stage('OWASP ZAP Baseline Scan') {
            steps {
                sh """
                    # 1. Activación de Entorno Virtual y captura del PID
                    echo "Iniciando aplicación Flask temporal..."
                    . venv/bin/activate
                    
                    # Ejecutar en segundo plano, guardar logs y CAPTURAR EL PID ($!)
                    nohup python3 app.py > flask.log 2>&1 &
                    FLASK_PID=\$! 
                    echo "Flask PID: \$FLASK_PID"

                    # 2. Bucle de espera robusto
                    echo "Esperando que Flask inicie (máximo 40 segundos)..."
                    CURL_TARGET="http://127.0.0.1:5000"
                    
                    for i in {1..20}; do
                        # curl -s verifica silenciosamente el acceso a la URL
                        if curl -s \$CURL_TARGET >/dev/null; then 
                            echo "Flask está corriendo después de \$((i * 2)) segundos."
                            break
                        fi
                        echo "Esperando... \$i"
                        sleep 2
                    done
                    
                    # Verificación final. Si no inicia, sale sin error para que el post ejecute la limpieza.
                    if ! curl -s \$CURL_TARGET >/dev/null; then
                        echo "ERROR: Flask no se inició. Abortando ZAP."
                        exit 0 
                    fi

                    # 3. Ajustando permisos 
                    echo "Ajustando permisos..."
                    chmod 777 \$(pwd) || true
                    chmod 777 \$(pwd)/* || true

                    # 4. Ejecutando ZAP: se usa 127.0.0.1 para acceder al host
                    echo "Ejecutando ZAP..."
                    docker run --rm --network=host \
                        -v \$(pwd):/zap/wrk/:rw \
                        ghcr.io/zaproxy/zaproxy:stable \
                        zap-baseline.py \
                        -t \$CURL_TARGET \
                        -r zap_report.html \
                        -J zap_report.json || true
                """
            }
            post {
                always {
                    sh """
                        # 5. Limpieza (MANDATORIA)
                        # Detiene el proceso de Flask que se inició en segundo plano
                        if [ -n "\$FLASK_PID" ]; then
                            echo "Deteniendo proceso Flask con PID: \$FLASK_PID"
                            kill -9 \$FLASK_PID || true
                        fi
                    """
                    archiveArtifacts artifacts: 'zap_report.*, flask.log', fingerprint: true
                }
            }
        }



        /* ==========================
         * PUSH DOCKER
         * ========================== */
        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh """
                        echo \$DOCKER_PASS | docker login -u \$DOCKER_USER --password-stdin
                        docker push ${DOCKER_IMAGE}
                    """
                }
            }
        }


        /* ==========================
         * DEPLOY EN EC2
         * ========================== */
        stage('Deploy to EC2') {
            steps {
                sh """
                    chmod 400 ${EC2_KEY}

                    ssh -o StrictHostKeyChecking=no -i ${EC2_KEY} ${EC2_USER}@${EC2_IP} '
                        docker stop app || true
                        docker rm app || true
                        docker pull ${DOCKER_IMAGE}
                        docker run -d --name app -p 80:5000 ${DOCKER_IMAGE}
                    '
                """
            }
        }
    }

    post {
        always {
            echo "Pipeline completado. Todos los reportes fueron archivados."
        }
    }
}