pipeline {
    agent any

    environment {
        DOCKERHUB_CRED = credentials('dockerhub')
        GITHUB_TOKEN   = credentials('github-token')
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/TU_USUARIO/TU_REPO.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                    echo "Construyendo imagen Docker..."
                    docker build -t oneiran/securedev:latest .
                '''
            }
        }

        stage('Push Docker Image') {
            steps {
                sh '''
                    echo "$DOCKERHUB_CRED_PSW" | docker login -u "$DOCKERHUB_CRED_USR" --password-stdin
                    docker push oneiran/securedev:latest
                '''
            }
        }

        stage('Deploy to EC2') {
            steps {
                sh '''
                    echo "Preparando llave EC2..."
                    chmod 400 jenkins/claves-jenkins-ubuntu.pem

                    echo "Ejecutando script de despliegue..."
                    bash jenkins/deploy.sh
                '''
            }
        }
    }

    post {
        always {
            sh 'echo "Pipeline finalizado."'
        }
    }
}
