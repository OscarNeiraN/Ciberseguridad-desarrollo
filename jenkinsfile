pipeline {
    agent any

    environment {
        DOCKERHUB_USER = credentials('dockerhub-user')       // usuario
        DOCKERHUB_PASS = credentials('dockerhub-pass')       // contraseña
        GIT_TOKEN      = credentials('github-token')         // tu PAT de GitHub
        IMAGE          = "oneiran/SecureDev:latest"

        EC2_USER = "ec2-user"
        EC2_IP   = "3.239.5.93"
        EC2_KEY  = "jenkins/claves-jenkins-ubuntu.pem"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: "https://oauth2:${GIT_TOKEN}@github.com/oneiran/vulnerable-app.git"
            }
        }

        stage('Build Docker Image') {
            steps {
                sh """
                    docker build -t ${IMAGE} .
                """
            }
        }

        stage('Login to DockerHub') {
            steps {
                sh """
                    echo "${DOCKERHUB_PASS}" | docker login -u "${DOCKERHUB_USER}" --password-stdin
                """
            }
        }

        stage('Push Image to DockerHub') {
            steps {
                sh """
                    docker push ${IMAGE}
                """
            }
        }

        stage('Deploy to EC2') {
            steps {
                sh """
                    chmod +x jenkins/deploy.sh
                    sh jenkins/deploy.sh
                """
            }
        }
    }

    post {
        always {
            sh 'docker logout'
        }
        success {
            echo 'Despliegue completado con éxito en EC2!'
        }
        failure {
            echo 'El pipeline falló.'
        }
    }
}
